#!/usr/bin/env bash
indent() {
    sed -u 's/^/      /'
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    echo "APP_BASE was not set. Aborting" | indent
    exit 1
fi
APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"

cp "${BUILD_DIR}/${APP_BASE}/Procfile" "${BUILD_DIR}/${APP_BASE}"

if [ $? -ne 0 ]; then
    echo "FAILED to copy Procfile" | indent
    exit 1
fi

echo "Copied Procfile from ${APP_BASE} successfully" | indent

